<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/titre_historique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#0048FF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:text="Voici l'historique de toutes vos parties"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/historiques_parties"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/titre_historique">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/jamais_joue_historique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#0048FF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Il n'y a aucune partie enregistrÃ©e. Jouez pour retrouvez tous vos scores ! "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>